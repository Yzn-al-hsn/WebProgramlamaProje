@model WebProgramalamaProje.Models.CombinedModels.HospitalTownModel
@{
    Layout = "_LayoutAdmin";

    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="@Model.Hospital.Id" />
        <label asp-for="Hospital.Name">Hospital Name</label>
        <input asp-for="Hospital.Name" class="form-control" placeholder="@Model.Hospital.Name">
        <span asp-validation-for="Hospital.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Hospital.TownId">Town </label>
        <select class="form-control" asp-for="Hospital.TownId">
            @foreach (var town in Model.Towns)
            {
                <option value="@town.Id">@town.Name</option>
            }
        </select>
        <span asp-validation-for="Hospital.TownId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hospital.Email"></label>
        <input type="email" class="form-control" asp-for="Hospital.Email" placeholder="Email">
        <span asp-validation-for="Hospital.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hospital.PhoneNumber"></label>
        <input type="text" class="form-control" asp-for="Hospital.PhoneNumber" placeholder="Phone">
        <span asp-validation-for="Hospital.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hospital.Address"></label>
        <input type="text" class="form-control" asp-for="Hospital.Address" placeholder="Address">
        <span asp-validation-for="Hospital.Address" class="text-danger"></span>
    </div>
    <button type="submit" value="Save" class="btn btn-primary mt-3">Save</button>
    <button type="submit" asp-controller="Hospital" asp-action="Index" class="btn btn-secondary mt-3">Back to list</button>

</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}